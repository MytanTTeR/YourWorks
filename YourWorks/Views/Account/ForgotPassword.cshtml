@model YourWorks.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Забыли пароль?";
}

<content>
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Введите адрес электронной почты</h4>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-6">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3 col-md-10">
                <input type="submit" class="btn btn-default" value="Отправка ссылки по электронной почте" />
            </div>
        </div>
    }
</content>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
