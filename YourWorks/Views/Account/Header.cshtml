@{
    Layout = "";
}

<header>
    <div class="profile">
        <div class="profile-bg" style="background: #fff; background-position: 50%; background-size: auto 100%;">
            @*<div class="file-paper-angle">
                </div>*@
            <div class="profile-bg-wrapper">
                <div class="profile-info-block">
                    <div class="profile-avatar" style="background: url('../Uploads/Avatars/@ViewBag.User.Avatar'); background-size: 100% 100%;">
                        <div class="change-avatar"></div>
                    </div>
                    <div class="profile-username">@User.Identity.Name</div>
                </div>
                <ul class="profile-stats">
                    <li>Выложено работ<br /><span>@ViewBag.AchivementCount</span></li>
                    <li>В избранных<br /><span>@ViewBag.FavoritesCount</span></li>
                    @*<li>Просмотров<br /><span>@ViewBag.Views</span></li>*@
                    <li>Рейтинг<br /><span>@ViewBag.Rate</span></li>
                </ul>
            </div>
        </div>
    </div>
</header>
